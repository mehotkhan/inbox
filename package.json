{
  "name": "inbox",
  "private": false,
  "description": "my Personal Inbox Page",
  "type": "module",
  "scripts": {
    "build": "NODE_OPTIONS=--max_old_space_size=8000 nuxt build",
    "clean": "rm -rf .nuxt dist .output dist_build",
    "cloudflare": "NITRO_PRESET=cloudflare_pages npm run build && mkdir dist_build && cp -r dist/_worker.js dist_build/_worker.js && npm run generate && cp -r dist_build/_worker.js dist/_worker.js",
    "dev": "VITE_CJS_IGNORE_WARNING=1 nuxt dev",
    "generate": "nuxt generate",
    "i18:update": "node tools/updateLocale.js",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "nuxt preview"
  },
  "dependencies": {
    "@noble/curves": "^1.6.0",
    "@noble/hashes": "^1.5.0",
    "@nuxtjs/seo": "2.0.0-rc.23",
    "@simplewebauthn/browser": "^11.0.0",
    "@simplewebauthn/server": "^11.0.0",
    "@tiptap/extension-bubble-menu": "^2.9.0",
    "@tiptap/extension-placeholder": "^2.9.0",
    "@tiptap/extension-text-style": "^2.9.0",
    "@vueuse/components": "^11.1.0",
    "@vueuse/core": "^11.1.0",
    "@vueuse/rxjs": "^11.1.0",
    "better-sqlite3": "^11.5.0",
    "dexie": "^4.0.9",
    "drizzle-orm": "^0.35.3",
    "h3-zod": "^0.5.3",
    "js-base64": "^3.7.7",
    "luxon": "^3.5.0",
    "nostr-tools": "^2.8.1",
    "nuxt": "^3.13.2",
    "nuxt-tiptap-editor": "^2.0.0",
    "sass": "^1.80.3",
    "tiptap-markdown": "^0.8.10",
    "web-uuid": "0.1.0-pre.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241018.0",
    "@iconify-json/uil": "^1.2.1",
    "@nuxt/content": "^2.13.4",
    "@nuxt/eslint": "^0.6.0",
    "@nuxt/image": "npm:@nuxt/image-nightly@latest",
    "@nuxt/ui": "2.18.7",
    "@nuxtjs/i18n": "^8.5.5",
    "@types/better-sqlite3": "^7.6.11",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.7.8",
    "drizzle-kit": "^0.26.2",
    "ejs": "^3.1.10",
    "eslint": "^9.13.0",
    "nitro-cloudflare-dev": "^0.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vite-plugin-compression": "^0.5.1",
    "vue-router": "^4.4.5",
    "wrangler": "^3.81.0"
  }
}