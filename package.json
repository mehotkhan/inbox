{
  "name": "inbox",
  "private": false,
  "description": "my Personal Inbox Page",
  "type": "module",
  "scripts": {
    "build": "NODE_OPTIONS=--max_old_space_size=8000 nuxt build",
    "clean": "rm -rf .nuxt dist .output dist_build",
    "cloudflare": "NITRO_PRESET=cloudflare_pages npm run build && mkdir dist_build && cp -r dist/_worker.js dist_build/_worker.js && npm run generate && cp -r dist_build/_worker.js dist/_worker.js",
    "dev": "VITE_CJS_IGNORE_WARNING=1 nuxt dev",
    "generate": "nuxt generate",
    "i18:update": "node tools/updateLocale.js",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "nuxt preview"
  },
  "dependencies": {
    "@noble/curves": "^1.7.0",
    "@noble/hashes": "^1.6.1",
    "@nuxt/ui": "3.0.0-alpha.9",
    "@vueuse/components": "^12.0.0",
    "@vueuse/core": "^12.0.0",
    "@vueuse/rxjs": "^12.0.0",
    "better-sqlite3": "^11.7.0",
    "dexie": "^4.0.10",
    "drizzle-orm": "^0.38.2",
    "h3-zod": "^0.5.3",
    "js-base64": "^3.7.7",
    "luxon": "^3.5.0",
    "nostr-tools": "^2.10.4",
    "nuxt": "^3.14.1592",
    "nuxt-auth-utils": "^0.5.7",
    "sass": "^1.83.0",
    "web-uuid": "0.1.0-pre.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241216.0",
    "@iconify-json/uil": "^1.2.3",
    "@nuxt/content": "^2.13.4",
    "@nuxt/eslint": "^0.7.3",
    "@nuxt/image": "npm:@nuxt/image-nightly@latest",
    "@nuxtjs/i18n": "^9.1.1",
    "@tailwindcss/typography": "^0.5.15",
    "@types/better-sqlite3": "^7.6.12",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.10.2",
    "drizzle-kit": "^0.30.1",
    "ejs": "^3.1.10",
    "eslint": "^9.17.0",
    "nitro-cloudflare-dev": "^0.2.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vite-plugin-compression": "^0.5.1",
    "vue-router": "^4.5.0",
    "wrangler": "^3.96.0"
  }
}